@import 'nib/size'

colors(bg = #FFF, clr = #000)
  background-color: bg
  color: clr

cal-base()
  border: 1px solid #556
  cursor: default
  font-family: Tahoma, Verdana, sans-serif
  font-size: 11px
  line-height: @font-size

.datetime-picker
  cal-base()
  display: inline-block
  //visibility: hidden
  colors()
  z-index: 999
  &.visible
    visibility: visible
  .disabled
    color: #999 !important
  .head
    height: 15px
    line-height: @height
    border-bottom: 1px solid #556
    colors()
    font-size: 1.1em
    font-weight: bold
    text-align: center
    .title
      padding: 2px
    .closer
      size: @height
      float: right
      cursor: pointer
      background-color: #DDD
      &:hover
        background-color: grey
  button
    height: 25px
    font-size: 13px
    line-height: @font-size
    &.confirm
      width: 100%
      margin-bottom: 0
      padding:2px
      line-height: 13px
  .nav-buttons
    .left
    .right
      line-height: 13px
    .left
      float: left
    .right
      float: right

@import 'calendar'
@import 'time-picker'