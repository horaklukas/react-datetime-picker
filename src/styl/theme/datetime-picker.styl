@import 'nib/size'
@import 'nib/vendor'

colors(bg = #FFF, clr = #000)
  background-color: bg
  color: clr

.datetime-picker
  display: inline-block
  //visibility: hidden
  colors()
  border: 2px solid pickerBorderColor
  border-radius: 2px
  font-family: Tahoma, Verdana, sans-serif
  font-size: 11px
  line-height: 30px
  z-index: 999
  &.visible
    visibility: visible
  .disabled
    color: #999 !important
  button
    height: 25px
    margin: 0
    font-size: 13px
    line-height: @font-size
    vertical-align: middle
    colors: buttonBgColor buttonColor
    border: 1px outset buttonBorderColor
    border-radius: 3px
    &:hover
      colors: hoveredButtonBgColor hoveredButtonColor
    &:active
      if dark(buttonBgColor)
        colors: darken(buttonColor, 30%), buttonBgColor
      else
        colors: lighten(buttonColor, 30%), buttonBgColor
    &.confirm
      width: 98%
      margin: 1px 1%
      padding:2px
      line-height: 13px

@import 'picker-head'
@import 'month-year-navigation'
@import 'calendar'
@import 'time-picker'