colors(bg = #FFF, clr = #000)
  background-color: bg
  color: clr

cal-base()
  border: 1px solid #556
  cursor: default
  font-family: Tahoma, Verdana, sans-serif
  font-size: 11px

/* The main calendar widget.  DIV containing a table. */
.calendar
  cal-base()
  display: inline-block
  position: absolute
  colors()
  z-index: 98
  .disabled
    color: #999 !important
  .head
    height: 15px
    border-bottom: 1px solid #556
    colors()
    font-size: 1.1em
    font-weight: bold
    text-align: center
    .title
      padding: 2px
    .closer
      size: @height
      float: right
      cursor: pointer
      background-color: #DDD
      &:hover
        background-color: grey
  button
    height: 25px
    font-size: 13px
    line-height: @font-size
    &.confirm
      width: 100%
      margin-bottom: 0
      padding:2px
  .nav-buttons
    .left
      float: left
    .right
      float: right
  table
    clear: both
    cal-base()
    colors(#EEF)
    border: 0
    .weekend
      color: #A66
    thead
      .daynames
        background: #BDF
        .name
          padding: 2px
          border-bottom: 1px solid #556
          color: #000
          text-align: center
    tbody
      .day
        width: 2em
        padding: 2px 4px 2px 2px
        color: #456
        text-align: right
        &.highlightable:hover
          padding: 1px 3px 1px 1px
          border: 1px solid #bbb
          background: #DEF
        // Cell showing today date
        &.selected
          padding: 1px 3px 1px 1px
          border: 1px solid #000
          colors()
          font-weight: bold
      // Empty cells (the best is to hide them)
      // Empty row (some months need less than 6 rows)
      .emptycell
      .emptyrow
        visibility: hidden
  .timerow
    padding: 5px 0
    border-top: 1px solid #000
    text-align: center
    background-color:#FFF
    .label
      margin-right: 5px
    .time
      display: inline-block
      /*.hour
      .minute
      .second*/
      .value
        padding: 0px 3px 0px 4px
        border: 1px solid #889
        background-color: #FFF
        font-weight: bold
        &.highlightable:hover
          border-color: #000
          colors(#667,#FFF)
        &.active
          colors(#000,#FFF)
      .colon
        padding: 0px 2px 0px 3px
        font-weight: bold