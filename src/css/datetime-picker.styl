@import 'nib/size'

colors(bg = #FFF, clr = #000)
  background-color: bg
  color: clr

cal-base()
  border: 1px solid #556
  cursor: default
  font-family: Tahoma, Verdana, sans-serif
  font-size: 11px

.datetime-picker
  cal-base()
  display: none
  colors()
  z-index: 98
  &.visible
    display: inline-block
  .disabled
    color: #999 !important
  .head
    height: 15px
    border-bottom: 1px solid #556
    colors()
    font-size: 1.1em
    font-weight: bold
    text-align: center
    .title
      padding: 2px
    .closer
      size: @height
      float: right
      cursor: pointer
      background-color: #DDD
      &:hover
        background-color: grey
  button
    height: 25px
    font-size: 13px
    line-height: @font-size
    &.confirm
      width: 100%
      margin-bottom: 0
      padding:2px
  .nav-buttons
    .left
      float: left
    .right
      float: right

@import 'calendar'
@import 'time-picker'